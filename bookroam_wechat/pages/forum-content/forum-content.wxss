.main-container {
    width: 97%;
    margin: 0 auto;
}

.title {
    font-size: 38rpx;
    margin-top: 10px;
}

.desc {
    font-size: 26rpx;
}

.content {
    margin-top: 10px;
    font-size: 32rpx;
    color: #666;
    text-indent:1em;
    line-height: 1.2em;
}

.comment-title {
    margin-top: 60rpx;
    font-size: 32rpx;
    border-left: 2px solid #000;
    padding-left: 5px;
    margin-bottom: 10px;
}

.comment {
    margin-top: 10px;
    width: 97%;
    /*background-color: rgb(248, 248, 248);*/
    /*box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);*/
    display: flex;
    flex-direction: column;
    padding-left: 10px;
    padding-bottom: 5px;
    border-bottom: 1px solid #eee;
}

.comment-desc {
    width: 100%;
    height: 20px;
    margin-top: 10px;
}

.comment-desc .point {
    width: 10px;
    height: 10px;
    border-radius: 100%;
    float: left;
    margin-right: 5px;
}

.comment-desc .name {
    float: left;
    font-size: 30rpx;
    margin-top: -2px;
