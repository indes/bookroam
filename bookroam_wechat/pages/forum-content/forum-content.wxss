}

.comment-desc .time {
    float: right;
    font-size: 26rpx;
    margin-right: 5px;
    margin-top: -4px;
    color: #666;
}

.comment-value {
    font-size: 28rpx;
    line-height: 1.2em;
    color: #666;
}

.comment-action {
    width: 100%;
    height: 40px;
    position: fixed;
    background: #fff;
    box-shadow: 2px 1px 2px 2px rgba(0, 0, 0, 0.1);
    bottom: 0;
}

#contentInput {
    height: 40px;
    width: 100%;
    margin-left: 20px;
    float: left;
}

